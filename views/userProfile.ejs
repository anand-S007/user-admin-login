<%-include('header')-%>

<section class="vh-100 gradient-custom bg-black">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-primary text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <div class="mb-md-5 mt-md-4 pb-5">
  
                <h2 class="fw-bold mb-2 text-uppercase">Welcome !!</h2>

                    <% if (locals.name) {%>
                <p class="text-white-50 mb-4"><%= locals.name %></p>
                        <% } else { %>
                        <p class="text-white-50 mb-4"> <%= "User" %> </p>   
                        <% } %>
  

                        <table class="table table-dark border-primary  table-hover w-100" style="--bs-table-bg: #000 !important;">
                            <tr class="w-100">
                            
                              <td>Name :</td>
                              <% if(locals.user) { %>
                              <td><%= locals.user.name %></td>
                             
                            </tr>

                            <tr class="w-100">
                            
                                <td>E-mail :</td>
                                <td><%= locals.user.email %></td>
                               
                              </tr>
                              <tr class="w-100">
                            
                                <td>Mobile :</td>
                                <td><%= locals.user.mobile %></td>
                               
                              </tr>
                              <tr class="w-100">
                            
                                <td>Password :</td>
                                <% var len = locals.user.password.length %>
                                <td><%= '*'.repeat(len) %></td>
                               
                              </tr>
                           <% } %>
                          </table>

                          <h2><a href="/userHome/editprofile"><button type="button" class="btn btn-outline-light btn-lg px-5">Edit</button></a></h2>        
                        
                          
                        <h2><a href="/logout"><button type="button" class="btn btn-outline-light btn-lg px-5">Logout</button></a></h2>        
              </div>
  
            
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


<%-include('footer')-%>