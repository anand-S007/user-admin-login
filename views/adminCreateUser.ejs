<%-include('header')-%>

<section class="vh-100 gradient-custom bg-black">
    <div class="container py-1 h-100">
      <div class="row d-flex justify-content-center align-items-center w-100 h-100">
        <div class="col-md-12">

          <div class=" bg-primary text-white " style="border-radius: 1rem">
            <div class="mb-md-5 mt-md-4 px-5 py-5">

            <h2 class="fw-bold mb-2 text-uppercase"> Welcome  <% if (locals.name) {%> <%= locals.name %> <% }
                  else { %> <%= "User" %> <% } %>
               !! </h2>

              <form action="/admin/adminhome/createuser" method="post">
                 
                  <div class="form-outline form-white mb-3">
                      <label class="form-label" for="nameField">Name</label>
                    <input type="text" id="nameField" class="form-control form-control-lg" name="name"  required />
                    <p><div id="error1" style="display: none;" class="alert alert-danger err"></div></p>
                  </div>
              
                  <div class="form-outline form-white mb-3">
                      <label class="form-label" for="emailField">Email</label>
                    <input type="email" id="emailField" class="form-control form-control-lg" name="email"  required />
                    <p><div id="error2" style="display: none;" class="alert alert-danger err"></div></p>
                  </div>

                  <div class="form-outline form-white mb-3">
                    <label class="form-label" for="mobileField">Mobile</label>
                    <input type="number" id="mobileField" class="form-control form-control-lg" name="mobile"  required/>
                    <p><div id="error3" style="display: none;" class="alert alert-danger err"></div></p>
                    </div>
    
                  <div class="form-outline form-white mb-3">
                    <input type="password" id="passwordField" class="form-control form-control-lg" name="password" required/>
                    <label class="form-label" for="passwordField">Password</label>
                    <p><div id="error4" style="display: none;" class="alert alert-danger err"></div></p>
                  </div>

                  <input class="btn btn-outline-info btn-lg px-5 mb-3" type="submit" value="Create" />

                  </form>

                <h2>
                  <a href="/admin/logout"><button type="button" class="btn btn-outline-light btn-lg px-5" >
                      Logout
                    </button></a>
                  
                </h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script src="/public/js/registerValidation.js"></script>
<%-include('footer')-%>