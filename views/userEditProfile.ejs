<%-include('header')-%>

<section class=" gradient-custom bg-black">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-primary text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <div class="mb-md-5 mt-md-4 pb-5">
  
                <h2 class="fw-bold mb-2 text-uppercase">Welcome !!</h2>

                    <% if (locals.name) {%>
                <p class="text-white-50 mb-4"><%= locals.name %></p>
                        <% } else { %>
                        <p class="text-white-50 mb-4"> <%= "User" %> </p>   
                        <% } %>
  
                        <% if(locals.err) { %>
                            <div class="alert alert-danger"> <%= locals.err %></div>
                              <% } %>

                        <table class="table table-dark border-primary  table-hover w-100 " style="--bs-table-bg: #000 !important;">
                            <tr class="w-100">
                             <form action="/userHome/editprofile" method="post">
                            
                              <td>Name :</td>
                              <% if(locals.user) { %>
                              <td><div class="form-outline form-white mb-3">
                              <input type="text" id="typeNameX" class="form-control form-control-lg" name="name" value="<%= locals.user.name %>" required />
                              
                            </div></td>
                             
                            </tr>

                            <tr class="w-100">
                            
                                <td>E-mail :</td>
                                <td><div class="form-outline form-white mb-3">
                                  <input type="email" id="typeEmailX" class="form-control form-control-lg" name="email" value="<%= locals.user.email %>" required />
                                  
                                </div></td>
                               
                              </tr>
                              <tr class="w-100">
                            
                                <td>Mobile :</td>
                                <td> <div class="form-outline form-white mb-3">
                                    <input type="number" id="typeMobileX" class="form-control form-control-lg" name="mobile" value="<%= locals.user.mobile %>" required/>
                                  </div></td>
                               
                              </tr>
                              <tr class="w-100">
                            
                                <td>Current Password :</td>
                                <td><div class="form-outline form-white mb-3">
                                    <input type="password" id="typePass1X" class="form-control form-control-lg" name="password1"  required/>
                                  </div></td>
                               
                              </tr>
                              <tr class="w-100">
                            
                                <td>New Password :</td>
                                <td><div class="form-outline form-white mb-3">
                                    <input type="password" id="typePass2X" class="form-control form-control-lg" name="password2"  required/>
                                  </div></td>
                               
                              </tr>
                           <% } %>
                           
                          </table>

                          <h2><input type="submit" class="btn btn-outline-info btn-lg px-5" value="Edit"></h2>        
                        </form>
                          
                        <h2><a href="/logout"><button type="button" class="btn btn-outline-light btn-lg px-5">Logout</button></a></h2>        
              </div>
  
            
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


<%-include('footer')-%>